# System packages module
{ config, lib, pkgs, ... }:

{
  environment.systemPackages = with pkgs; [
    # ═══════════════════════════════════════════════════════════════════════
    # Terminal & Shell
    # ═══════════════════════════════════════════════════════════════════════
    kitty
    zsh
    starship
    zellij

    # ═══════════════════════════════════════════════════════════════════════
    # Editors
    # ═══════════════════════════════════════════════════════════════════════
    neovim
    helix

    # ═══════════════════════════════════════════════════════════════════════
    # CLI Utilities
    # ═══════════════════════════════════════════════════════════════════════
    git
    curl
    wget
    htop
    btop
    tree
    ripgrep
    fd
    fzf
    jq
    yq

    # ═══════════════════════════════════════════════════════════════════════
    # System Tools
    # ═══════════════════════════════════════════════════════════════════════
    file
    which
    unzip
    zip
    gzip

    # ═══════════════════════════════════════════════════════════════════════
    # Network Tools
    # ═══════════════════════════════════════════════════════════════════════
    iproute2
    iputils
    dnsutils
    netcat

    # ═══════════════════════════════════════════════════════════════════════
    # Development - Build Tools
    # ═══════════════════════════════════════════════════════════════════════
    gcc
    gnumake
    cmake

    # ═══════════════════════════════════════════════════════════════════════
    # Development - Languages & Runtimes
    # ═══════════════════════════════════════════════════════════════════════
    nodejs_22
    python3
    go
    rustc
    cargo

    # ═══════════════════════════════════════════════════════════════════════
    # LSP Servers
    # ═══════════════════════════════════════════════════════════════════════
    lua-language-server
    nodePackages.typescript-language-server
    nodePackages.bash-language-server
    nodePackages.yaml-language-server
    pyright
    gopls
    rust-analyzer

    # ═══════════════════════════════════════════════════════════════════════
    # Formatters
    # ═══════════════════════════════════════════════════════════════════════
    stylua
    black
    isort
    nodePackages.prettier
    shfmt
    taplo

    # ═══════════════════════════════════════════════════════════════════════
    # Git Tools
    # ═══════════════════════════════════════════════════════════════════════
    lazygit
    delta

    # ═══════════════════════════════════════════════════════════════════════
    # Go Tools
    # ═══════════════════════════════════════════════════════════════════════
    gofumpt
    gotools
    delve
  ];

  # Default editor
  environment.variables.EDITOR = "nvim";

  # Enable zsh system-wide
  programs.zsh.enable = true;
}
